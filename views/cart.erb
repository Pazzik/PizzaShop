<h1>Your order:</h1>
<table class="table table-striped">
  <thead>
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Count</th>
        <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each_with_index do |item,index |  %>
        <tr>
          <td><%= index %></td>
          <td><%= item[0] %></td>
          <td><%= item[1] %></td>
          <td><%= item[2] %></td>
        </tr>
    <% end %>
  </tbody>
</table>