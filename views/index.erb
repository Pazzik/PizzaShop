<h2>Welcome to PizzaShop</h2>

<div class="container">
  <div class="row">
    <% @products.each do |item| %>
        <div class="col-md-3">
          <div>
          <img src="<%= item.path_to_image %>"/>
          </div>

          <div>
            <%= item.title %>
          </div>

          <div>
            <%= item.description %>
          </div>

          <div>
            Size: <%= item.size %> cm
          </div>

          <div>
            Price: <%= item.price %> rub
          </div>

          <div>
            <button class="btn btn-small btn-success" onclick="add_to_cart(<%= item.id %>)">Add to Cart</button>
          </div>

        </div>
    <% end  %>
  </div>
</div>

<script type="text/javascript">
    $(function(){
        update_orders_input();
        update_orders_button();
    });
</script>


